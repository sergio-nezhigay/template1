{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next",
      },
    ],
    "baseUrl": ".",
    "paths": {
      "@/admin/*": ["admin/*"],
      "@/components/*": ["src/components/*"],
      "@/layout/*": ["src/layout/*"],
      "@/utils/*": ["src/utils/*"],
      "@/sections/*": ["src/sections/*"],
      "@/lib/*": ["src/lib/*"],
      "@/public/*": ["public/*"],
      "@/data/*": ["src/data/*"],
      "@/types/*": ["/src/types/*"],
      "@/src/*": ["src/*"],
      "@/*": ["./*"],
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
}
